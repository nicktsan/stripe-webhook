{
  "name": "stripe-webhook-lambda",
  "version": "1.0.0",
  "description": "stripe webhook for lambda",
  "main": "index.ts",
  "repository": "https://github.com/nicktsan/stripe-webhook",
  "author": "Nicholas Tsang",
  "license": "MIT",
  "devDependencies": {
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.99",
    "@swc/jest": "^0.2.29",
    "@types/aws-lambda": "^8.10.129",
    "@types/jest": "^29.5.10",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "typescript": "5.2.2"
  },
  "scripts": {
    "build": "rm -rf dist && npx swc ./src -d ./dist --ignore \"**/*.test.ts,**/__test__/**\"",
    "test": "jest --clearCache --coverage",
    "lint": "eslint \"src/**/*.{json,js,jsx,ts,tsx}\" && tsc --noemit",
    "package": "mkdir -p dist/layers/deps-layer/nodejs && mkdir -p dist/layers/util-layer && mkdir -p dist/handlers/stripe_webhook_lambda && cp package*.json dist/layers/deps-layer/nodejs && cp yarn.lock dist/layers/deps-layer/nodejs && cd dist/layers/deps-layer/nodejs && yarn --modules-folder node_modules --frozen-lockfile",
    "deploy": "terraform -chdir=infrastructure apply"
  }
}
